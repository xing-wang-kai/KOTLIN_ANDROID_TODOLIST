<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyOrganizationList"
        tools:targetApi="31">
        <activity
            android:name=".ui.activitys.RegistarNewUserActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activitys.LoginUserActivity"
            android:exported="true"
            android:theme="@style/Theme.MyOrganizationList">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activitys.ProductCardLayoutActivity"
            android:exported="false"
            android:theme="@style/Theme.MyOrganizationList" />
        <activity
            android:name=".ui.activitys.FormProductActivity"
            android:exported="true"
            android:theme="@style/Theme.MyOrganizationList">

        </activity>
        <activity
            android:name=".ui.activitys.ListProductsActivity"
            android:exported="true"
            android:theme="@style/Theme.MyOrganizationList">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>